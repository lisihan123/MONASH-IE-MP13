<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD">

    <ImageView
        android:id="@+id/bilrdlife_logo"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/birdlife_logo"
        android:elevation="4dp"
        android:background="#FFFDFD"/>

    <ImageView
        android:id="@+id/ebird_logo"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="87dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birdlife_intro"
        app:srcCompat="@drawable/ebird_logo"
        android:elevation="4dp"
        android:background="#FFFDFD"/>

    <TextView
        android:id="@+id/birdlife_intro"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/ngo_1"
        android:textAlignment="viewStart"
        android:textColor="#2A2A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bilrdlife_logo" />

    <TextView
        android:id="@+id/ebird_intro"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/nog_2"
        android:textColor="#2A2A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ebird_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>