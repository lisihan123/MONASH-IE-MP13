<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.home.HomeFragment"
    android:background="@color/white" >


    <com.youth.banner.Banner
        android:id="@+id/mBanner"
        android:layout_width="411dp"
        android:layout_height="253dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.youth.banner.Banner>

    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/home_page"
        android:textColor="#040404"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBanner" />


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="320dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/btn_factlist"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_above="@id/btn_life_cycle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/btn_poster"
            android:background="@drawable/shape_capsule_home"
            android:backgroundTint="#7468BE"
            android:drawableTop="@drawable/ic3_home_factlist"
            android:drawablePadding="10dip"
            android:elegantTextHeight="true"
            android:elevation="4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:paddingTop="20dip"
            android:text="@string/home_button_1"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/btn_poster"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_above="@id/btn_community"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_capsule_home"
            android:backgroundTint="#7468BE"
            android:drawableTop="@drawable/ic1_home_design"
            android:drawablePadding="10dip"
            android:elevation="4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:paddingTop="20dip"
            android:text="@string/home_button_3"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/btn_life_cycle"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_capsule_home"
            android:backgroundTint="#7468BE"
            android:drawableTop="@drawable/ic2_home_birdlifecycle"
            android:drawablePadding="10dip"
            android:elevation="4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:paddingTop="20dip"
            android:text="@string/home_button_2"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            tools:textStyle="bold" />


        <Button
            android:id="@+id/btn_community"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_capsule_home"
            android:backgroundTint="#7468BE"
            android:drawableTop="@drawable/ic4_home_community"
            android:drawablePadding="10dip"
            android:elevation="4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:paddingTop="20dip"
            android:text="@string/home_button_4"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="18sp"
            tools:textStyle="bold" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
