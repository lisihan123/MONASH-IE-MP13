<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.home.HomeFragment"
    android:background="@color/white" >


    <com.youth.banner.Banner
        android:id="@+id/mBanner"
        android:layout_width="411dp"
        android:layout_height="275dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.youth.banner.Banner>

    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/home_page"
        android:textColor="#040404"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBanner" />

    <Button
        android:id="@+id/btn_life_cycle"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/shape_capsule_home"
        android:backgroundTint="#7468BE"
        android:fontFamily="@font/roboto"
        android:text="@string/home_button_2"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_community"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_poster"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/shape_capsule_home"
        android:backgroundTint="#7468BE"
        android:fontFamily="@font/roboto"
        android:text="@string/home_button_3"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_community"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_factlist"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page"
        app:layout_constraintVertical_bias="0.495" />

    <Button
        android:id="@+id/btn_factlist"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/shape_capsule_home"
        android:backgroundTint="#7468BE"
        android:fontFamily="@font/roboto"
        android:text="@string/home_button_1"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_life_cycle"
        app:layout_constraintEnd_toStartOf="@+id/btn_poster"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page"
        app:layout_constraintVertical_bias="0.495" />

    <Button
        android:id="@+id/btn_community"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/shape_capsule_home"
        android:backgroundTint="#7468BE"
        android:fontFamily="@font/roboto"
        android:text="@string/home_button_4"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_life_cycle" />

</androidx.constraintlayout.widget.ConstraintLayout>
